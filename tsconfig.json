{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    //    "strict": true,
    "target": "esnext",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "paths": {
      "~*": [
        "src/*"
      ]
    },
    //    "target": "esnext",
    //    "module": "commonjs",
    //    "jsx": "preserve",
    //    "allowJs": true,
    "outDir": "./dist",
    // "moduleResolution": "node",
    //    "allowSyntheticDefaultImports": true,
    //    "noUnusedLocals": true,
    "experimentalDecorators": true,
    //    "noUnusedParameters": true,
    //    "removeComments": false,
    //    "preserveConstEnums": true,
    //    "sourceMap": true,
    //    "skipLibCheck": true,
    "baseUrl": ".",
    //    "lib": [
    //      "es2016",
    //      "dom"
    //    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "test/**/*",
    "src/**/*",
    "server/**/*",
    "script/**/*"
  ],
  "exclude": [
    ".next",
    "node_modules"
  ]
}