    "experimentalDecorators": true,
    //    "noUnusedParameters": true,
//    "removeComments": false,
//    "preserveConstEnums": true,
//    "sourceMap": true,
//    "skipLibCheck": true,
    "baseUrl": ".",
//    "lib": [
//      "es2016",
//      "dom"
//    ],
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "server/**/*",
    "script/**/*"
  ],
  "exclude": [
    ".next",
    "node_modules"
  ]
}